{
  "name": "fleet-tracker-api",
  "version": "1.0.0",
  "description": "Fleet Tracker Api",
  "main": "src/server/index.js",
  "scripts": {
    "dev": "nodemon ./src/server/index.js",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --timeout 20000 --recursive src/tests",
    "test:unit": "cross-env NODE_ENV=test mocha src/tests/unit",
    "test:integration": "cross-env NODE_ENV=test mocha --timeout 20000 src/tests/integration",
    "test:watch": "cross-env NODE_ENV=test mocha --watch src/tests/unit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "precommit": "yarn lint",
    "lint": "eslint **/*.js --ignore-path .gitignore --ignore-pattern internals/scripts",
    "lint:fix": "yarn lint -- --fix",
    "lint:watch": "yarn lint -- --watch"
  },
  "author": "Sunday Aroh",
  "license": "ISC",
  "dependencies": {
    "africastalking": "^0.4.4",
    "awesome-phonenumber": "^2.27.0",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.7.2",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.0",
    "csurf": "^1.11.0",
    "dotenv-safe": "^8.2.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "express": "^4.17.1",
    "express-rate-limit": "^5.0.0",
    "express-validation": "^1.0.2",
    "helmet": "^3.21.2",
    "host-validation": "^2.0.1",
    "hpp": "^0.2.2",
    "http-status": "^1.3.2",
    "joi": "^14.3.1",
    "jwt-simple": "^0.5.6",
    "method-override": "^3.0.0",
    "mjml": "^4.4.0-beta.2",
    "moment-timezone": "^0.5.25",
    "mongoose": "^5.9.1",
    "mongoose-unique-validator": "^2.0.3",
    "morgan": "^1.9.1",
    "nodemailer": "^6.2.1",
    "nodemailer-smtp-transport": "^2.7.4",
    "otp-generator": "^1.1.0",
    "otplib": "^12.0.1",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
    "serve-favicon": "^2.5.0",
    "swagger-ui-express": "^4.1.3",
    "toobusy-js": "^0.5.1",
    "uuid": "^3.3.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.0.4",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.4.0",
    "lint-staged": "^8.2.0",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "sinon": "^7.3.2",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
